A 1    8=|       |=33   A15      A 1    9=|       |=34   A15
A 0    9=|       |=32   A16      A 0   10=|       |=33   A16
!CE   10=|       |=31   !BYTE    !CE   11=|       |=32   !BYTE
GND   11=|       |=30   GND      GND   12=|       |=31   GND
!OE   12=|       |=29   D15      !OE   13=|       |=30   D15
