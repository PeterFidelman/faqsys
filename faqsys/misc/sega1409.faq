A17    1=|       |=40   A 8      A17    2=|       |=41   A 8
A 7    2=|       |=39   A 9      A 7    3=|       |=40   A 9
A 6    3=|       |=38   A10      A 6    4=|       |=39   A10
A 5    4=|       |=37   A11      A 5    5=|       |=38   A11
A 4    5=|       |=36   A12      A 4    6=|       |=37   A12
A 3    6=|       |=35   A13      A 3    7=|       |=36   A13
